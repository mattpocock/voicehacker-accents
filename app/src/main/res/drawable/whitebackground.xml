<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/lightGrey" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white">
            </solid>

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>